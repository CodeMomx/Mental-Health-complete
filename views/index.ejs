<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Aleo:wght@300&family=Babylonica&family=Beau+Rivage&family=Berkshire+Swash&family=Cinzel+Decorative&family=Dancing+Script&family=Fjalla+One&family=Fredericka+the+Great&family=Frijole&family=Kristi&family=Londrina+Outline&family=Merriweather:wght@300&family=Monoton&family=Mrs+Sheppards&family=Noto+Serif+Display&family=Open+Sans:wght@300&family=Permanent+Marker&family=Pinyon+Script&family=Red+Rose:wght@300&family=Roboto:ital@1&family=Satisfy&family=Sigmar+One&family=Smooch&family=Tapestry&display=swap" rel="stylesheet">
</head>
<body>
  <h1>Peace Love & Happiness</h1>
  <div class="savage">
    <img src="/wellness_2.gif">
    <h2>Add a message</h2>
    <!-- the form action has to match on app.get on server.js -->
    <form action="/messages" method="POST"> 
      <input type="text" placeholder="name" name="name">
      <input type="text" placeholder="message" name="msg">
      <button type="submit"><i class="fa-solid fa-heart"></i></button>
    </form>
  </section>
  </div>
  <section class="right">
  <ul class="messages">
    <!-- red carrots are a syntax  -->
  <% for(var i=0; i<messages.length; i++) {%> 
    <li class="message"> 
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

 
  <script src="main.js"></script>

</body>
</html>
